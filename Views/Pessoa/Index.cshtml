@model IEnumerable<Academia.Models.Pessoa>

@{
    ViewBag.Title = "Index";
}

    <h2>Usuarios</h2>

    <p>
        @*@Html.ActionLink("Novo", "Create")*@
        @*@Html.ActionLink("Adicionar", "Create", new { }, htmlAttributes: new { @class = "btn btn-primary " })*@
    </p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoPessoa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPessoa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }, htmlAttributes: new { @class = "btn btn-warning " })
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Codigo }, htmlAttributes: new { @class = "btn btn-danger " })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Codigo }, htmlAttributes: new { @class = "btn btn-info " })

                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Codigo }) |
