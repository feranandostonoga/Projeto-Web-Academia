@model IEnumerable<Academia.Models.Pessoa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
<h2>Lista de Usuarios</h2>
</p>

<div class="form-group">


    <label> Buscar </label>
    <input type="text" class="form-control form-control input-lg" id="txtSearch" aria-describedby="nomeBusca" placeholder="nome">

</div>
<div class="form-group">


    <div id="gridClientes"></div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
        $(() => {
            carregaClientes();

            $('#txtSearch').on('keyup', () => {
                carregaClientes();
            });
        });

        function carregaClientes()
        {
            $.ajax({
                url: '@Url.Action("BuscaClientes","Home")',
                dataType: 'html',
                method: 'GET',
                data: { nome: $('#txtSearch').val() },
                success: function (res) {
                    $('#gridClientes').html('').html(res);
                },
                error: function (err) {
                    console.log(err);
                }

            }
            )
        }
</script>












